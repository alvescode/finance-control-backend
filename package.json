{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "services:up": "sudo docker compose --env-file .env -f ./src/infra/compose.yaml up -d",
    "services:down": "sudo docker compose -f ./src/infra/compose.yaml down",
    "services:stop": "sudo docker compose -f ./src/infra/compose.yaml stop",
    "dev": "npm run services:up && npm run build && npm run start",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "migration:run": "npx ts-node-dev ./node_modules/typeorm/cli.js migration:run -d dist/database/data-source.js"
  },
  "author": "alvescode",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/node": "^20.14.11",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.10.3",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
